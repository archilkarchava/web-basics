        "react-dom": "^16.0.0",
        "react-router-dom": "^4.2.2",
        "react-scripts": "^1.0.14"
    },
    "devDependencies": {
        "babel-eslint": "^8.0.1",
        "concurrently": "^3.5.0",
        "cross-env": "^5.1.0",
        "eslint": "^4.9.0",
        "eslint-config-standart": "^0.2.0",
        "eslint-plugin-node": "^5.2.1",
        "eslint-plugin-promise": "^3.6.0",
        "eslint-plugin-react": "^7.4.0",
        "eslint-plugin-standard": "^3.0.1",
        "lint-staged": "^4.3.0",
